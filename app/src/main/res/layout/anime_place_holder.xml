<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_item_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="nama"
            android:layout_marginTop="5dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Latar Belakang"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Kepribadian"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_item_kepribadian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Kemampuan"
            android:layout_marginTop="16dp"/>

        <TextView
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_brightness_1_24"
            android:id="@+id/kemampuan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_brightness_1_24"
            android:id="@+id/kemampuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_brightness_1_24"
            android:id="@+id/kemampuan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

</ScrollView>